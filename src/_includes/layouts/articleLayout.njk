---
layout: pageLayout
permalink: /blog/{{ category }}/{{date | permalinkDate}}/{{ title | slugify }}/
---

<article class="article">
  <h1>{{ title }}</h1>
  <small>
    Published: <time>{{ date | readableDate }}</time>
    <a class="category" href="/blog/{{ category }}">{{ category }}</a>
  </small>
  {{ content | safe }}
</article>